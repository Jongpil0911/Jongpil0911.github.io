<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in data[1] | sort: 'startDate' | reverse %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% assign date_display = null %}
          {% if content.dates_list %}
            {% assign last_year = content.dates_list | first | split: '.' | first %}
            {% assign count = content.dates_list | size %}
            {% assign date_display = last_year | append: ' (' | append: count | append: 'íšŒ)' %}
            
          {% elsif content.startDate and content.endDate and content.startDate != '' %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date_display = startDate | append: ' - ' | append: endDate %}
            
          {% elsif content.date and content.date != '' %}
            {% assign date_display = content.date | split: '-' | first %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date_display %}
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date_display }} </span>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {{ content.title }}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.awarder }}</h6>
          
          {% if content.dates_list %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.85rem; color: #777;">
              {{ date_item }}
              </li>
                {% endfor %}
              </ul>
              {% endif %}
              {% if content.summary %}
            </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
